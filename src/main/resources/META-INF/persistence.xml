<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="digital_academy">
            <properties>
                <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
                <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost/digital_academy"/>
                <property name="jakarta.persistence.jdbc.user" value="postgres"/>
                <property name="jakarta.persistence.jdbc.password" value="1234"/>
                <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
                <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
                <property name="hibernate.format_sql" value="true"/>
                <property name="hibernate.show_sql" value="true"/>
                <property name="jakarta.persistence.lock.timeout" value="2000"/>
                <property name="jakarta.persistence.query.timeout" value="2000"/>
            </properties>
    </persistence-unit>
</persistence>
